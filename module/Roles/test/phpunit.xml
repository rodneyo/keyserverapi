        <testsuite name="securityapi">
            <directory>./RolesTest</directory>
        </testsuite>
    </testsuites>
    <filter>
      <whitelist>
        <directory suffix=".php">/home/roliv/Sites/securityapi/module/Roles/src</directory>
      </whitelist>
    </filter>
